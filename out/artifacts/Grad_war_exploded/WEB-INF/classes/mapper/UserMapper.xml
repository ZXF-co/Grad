<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.grad.mapper.UserMapper">

    <select id="loginM" parameterType="String" resultType="com.example.grad.bean.UserBean">
        SELECT * FROM user WHERE name = #{name} AND password = #{password}
    </select>

    <select id="insertUserM" parameterType="String" resultType="com.example.grad.bean.UserBean">
        INSERT INTO user(name, password) values(#{name}, #{password})
    </select>

</mapper>